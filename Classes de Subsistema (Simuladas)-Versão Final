// Subsistema Usuário/Perfil (Sugestão: Builder)
class GerenciadorUsuarios {
    public Usuario cadastrarUsuario(Usuario usuario) {
        System.out.println("Usuário " + usuario.getName() + " cadastrado (Subsistema Usuário/Perfil).");
        // Lógica de autenticação e persistência (FRF-01, FRF-06)
        return usuario;
    }
}

