// Subsistema Notificação/Log (Sugestão: Singleton)
class LoggerSystem {
    // Implementação Singleton (garante única instância)
    public void log(String mensagem) {
        System.out.println("[LOG] " + mensagem); // (RNF-04)
    }
}

// Classes de Dados (DTOs Simplificados)
class Usuario {
    private String name;
    public Usuario(String name) { this.name = name; }
    public String getName() { return name; }
}

